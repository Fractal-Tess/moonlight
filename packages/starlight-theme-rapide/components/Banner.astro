---
import type { Props } from '@astrojs/starlight/props'

const { banner } = Astro.props.entry['data']
---

{banner && <div class="sl-rapide-banner" set:html={banner.content} />}

<style>
  .sl-rapide-banner {
    background-color: var(--sl-color-green-low);
    border: 1px solid var(--sl-color-green);
    border-radius: 0.5rem;
    color: var(--sl-color-green-high);
    line-height: var(--sl-line-height-headings);
    margin-top: 1rem;
    padding: 1rem;
  }

  .sl-rapide-banner :global(a) {
    color: oklch(from var(--sl-color-green-high) calc(l + 0.075) c h);
    text-underline-offset: 0.25em;
  }

  .sl-rapide-banner :global(a:is(:hover, :focus-visible)) {
    color: oklch(from var(--sl-color-green-high) calc(l - 0.2) calc(c + 0.1) h);
  }
</style>
